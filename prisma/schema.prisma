generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Gender {
  male
  female
}

model Style {
  id            String        @id @default(uuid())
  coverPhotoUrl String        @unique
  gender        Gender
  description   String        @unique
  prompts       Prompt[]
  chosenStyles  ChosenStyle[]
}

model Prompt {
  id              String           @id @default(uuid())
  inpaintPhotoUrl String           @unique
  prompt          String           @unique
  styleId         String
  style           Style            @relation(fields: [styleId], references: [id])
  generatedPhotos GeneratedPhoto[]
}

model ChosenStyle {
  id      String @id @default(uuid())
  userId  String
  styleId String
  style   Style  @relation(fields: [styleId], references: [id])

  @@unique([userId, styleId])
}

enum ModelStatus {
  pending
  training
  ready
}

model UserSettings {
  id              String      @id @default(uuid())
  userId          String      @unique
  gender          Gender
  credits         Int
  pendingPhotos   Int
  modelStatus     ModelStatus
  zippedPhotosUrl String?     @unique
}

model UploadedPhoto {
  id       String @id @default(uuid())
  userId   String
  photoUrl String @unique
}

model GeneratedPhoto {
  id        String   @id @default(uuid())
  userId    String
  photoUrl  String   @unique
  promptId  String
  prompt    Prompt   @relation(fields: [promptId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, promptId])
}
