generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Gender {
  male
  female
}

model Style {
  id            String        @id @default(uuid())
  coverPhotoUrl String        @unique
  gender        Gender
  description   String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @default(now()) @updatedAt
  prompts       Prompt[]
  chosenStyles  ChosenStyle[]

  @@unique([gender, description])
}

model Prompt {
  id              String           @id @default(uuid())
  inpaintPhotoUrl String           @unique
  prompt          String           @unique
  styleId         String
  style           Style            @relation(fields: [styleId], references: [id])
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @default(now()) @updatedAt
  generatedPhotos GeneratedPhoto[]
}

model ChosenStyle {
  id        String   @id @default(uuid())
  userId    String
  styleId   String
  style     Style    @relation(fields: [styleId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([userId, styleId])
}

enum ModelStatus {
  pending
  training
  ready
}

model UserSettings {
  id              String      @id @default(uuid())
  userId          String      @unique
  gender          Gender
  credits         Int
  modelStatus     ModelStatus
  zippedPhotosUrl String      @unique
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @default(now()) @updatedAt
}

enum Feedback {
  positive
  neutral
  negative
}

model GeneratedPhoto {
  id        String   @id @default(uuid())
  userId    String
  photoUrl  String?  @unique
  promptId  String
  prompt    Prompt   @relation(fields: [promptId], references: [id])
  feedback  Feedback @default(neutral)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
